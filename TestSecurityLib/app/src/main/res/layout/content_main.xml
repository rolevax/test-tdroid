<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rolevax.testsecuritylib.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/textview">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="600px"
        android:text="Test message digest, MAC, private key encryption, public key encryption, digital signature using java.security \nOutputs are in Logcat.  This works when GPS is available."
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:textColor="#6c21a9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test without sending to Internet"
        android:id="@+id/no_net_button"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test and send outputs for 7 times"
        android:id="@+id/net_button"
        android:layout_below="@+id/no_net_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

</RelativeLayout>
